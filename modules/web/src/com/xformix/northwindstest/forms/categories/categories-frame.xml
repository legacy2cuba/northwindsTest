<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window  xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.xformix.northwindstest.forms.categories.CategoriesEdit"
        datasource="categoriesDs"
        focusComponent="fieldGroup"
        messagesPack="com.xformix.northwindstest.forms.categories">
    <dialogMode height="600"
                width="800"/>
<layout spacing="true" >
    <scrollBox width="100%" height="100%" spacing="false" margin="false">
    <vbox id="TOP_LEVEL" width="714.24px" height="100%" >
      <grid spacing="true" id="Detail"  width="100%"  >
        <columns count="4"/>
        <rows>
          <row>
              <label  id="CategoryNameLabel" value="Category Name:"  height="20.0px" row="0" column="0"  align="MIDDLE_RIGHT" htmlEnabled="false" stylename="access-label"/>
            <textField  id="CategoryName" property="categoryname"  datasource="categoriesDs"  height="20.0px" width="230.0px" row="0" column="1"  stylename="access-textfield"  align="MIDDLE_LEFT"/>
              <label  id="PictureLabel" value="Picture:"  height="20.0px" row="0" column="2"  align="MIDDLE_RIGHT" htmlEnabled="false" stylename="access-label"/>
            <image scaleMode="CONTAIN"  id="Picture" property="picture"  datasource="categoriesDs"  height="140.0px" width="200.0px" rowspan="2" row="0" column="3" />
          </row>
          <row>
              <label  id="DescriptionLabel" value="Description:"  height="20.0px" row="1" column="0"  align="MIDDLE_RIGHT" htmlEnabled="false" stylename="access-label"/>
            <textArea  id="Description" property="description"  datasource="categoriesDs"  height="100.0px" width="240.0px" row="1" column="1"  stylename="access-textarea" />
          </row>
          <row>
            <frame  id="Product_List" screen="northwindsTest$Product_list.frame"  height="155.0px" width="470.0px" colspan="3" row="2" column="0" />
          </row>
        </rows>
      </grid>
</vbox>
</scrollBox>
</layout>
</window>
